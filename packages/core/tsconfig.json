{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // composite not needed; tsup drives build
    "composite": false,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "isolatedModules": false,
    // Let tsup generate declarations; avoid tsc conflicting
    "declaration": false,
    "declarationMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
