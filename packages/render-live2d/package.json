{
  "name": "@charivo/render-live2d",
  "version": "0.0.1",
  "description": "Live2D rendering engine for Charivo",
  "type": "module",
  "main": "dist/renderer.js",
  "types": "dist/renderer.d.ts",
  "exports": {
    ".": {
      "types": "./dist/renderer.d.ts",
      "import": "./dist/renderer.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && tsc -p tsconfig.dts.json --emitDeclarationOnly --declarationDir dist --pretty false",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@charivo/core": "workspace:*",
    "@charivo/render-core": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zeikar/charivo.git",
    "directory": "packages/render-live2d"
  },
  "author": {
    "name": "Zeikar",
    "url": "https://github.com/zeikar"
  },
  "homepage": "https://github.com/zeikar/charivo#readme",
  "bugs": {
    "url": "https://github.com/zeikar/charivo/issues"
  }
}
