{
  "name": "@charivo/llm-client-remote",
  "version": "0.0.0",
  "description": "Remote LLM client for Charivo (calls server API)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
