  },
  "dependencies": {
    "@charivo/core": "workspace:*",
    "@charivo/llm-core": "workspace:*",
    "openai": "^4.28.4"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}
